<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/recording"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipToPadding="false"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="20dp"
      tools:context=".android.sandbox.MainActivity">

      <TextView
        android:id="@+id/generated_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#f1f1f1"
        android:minWidth="72dp"
        android:padding="24dp"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:text="1" />

      <TextView
        android:id="@+id/generated_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Tap to generate a random number."
        android:visibility="visible" />

      <TextView
        android:id="@+id/generate_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#CC3A5F"
        android:padding="24dp"
        android:text="Generate a number!"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    </LinearLayout>
  </FrameLayout>

</FrameLayout>
